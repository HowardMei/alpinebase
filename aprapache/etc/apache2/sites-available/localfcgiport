<VirtualHost *:80>
    ServerName localhost
    ServerAlias localhost
    ErrorLog "/var/log/apache2/localfcgi.errorlog"
    CustomLog "/var/log/apache2/localfcgi.accesslog" combinedio env=!dontlog
    DocumentRoot /var/www/html
    ProxyPassMatch "^/(.*\.php(/.*)?)$" "fcgi://localhost:9000/var/www/html/$1" enablereuse=on
    <Directory /var/www/html>
        Options FollowSymLinks
        AllowOverride All
        Require all granted
    </Directory>
    <Location />
        Require all granted
    </Location>
    DirectoryIndex index.php
</VirtualHost>
