<VirtualHost *:80>
    ServerName localhost
    ServerAlias localhost
    ErrorLog "/var/log/apache2/localfcgi.errorlog"
    CustomLog "/var/log/apache2/localfcgi.accesslog" combinedio env=!dontlog
    DocumentRoot /var/www/html
    ProxyPassMatch "^/(.*\.php(/.*)?)$" "unix:/run/php/php-fpm7.sock|fcgi://localhost/var/www/html/"
    <Directory /var/www/html>
        Options FollowSymLinks
        AllowOverride All
        Require all granted
    </Directory>
    <Location />
        Require all granted
    </Location>
    DirectoryIndex index.php
</VirtualHost>
